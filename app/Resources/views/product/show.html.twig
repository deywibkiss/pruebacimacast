{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Producto</h3>
                </div>

                <div class="panel-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>{{ product.name }}</td>
                            </tr>
                            <tr>
                                <th>Slug</th>
                                <td>{{ product.slug }}</td>
                            </tr>
                            <tr>
                                <th>Precio</th>
                                <td>{{ product.price }}</td>
                            </tr>
                            <tr>
                                <th>Categor√≠a</th>
                                <td>{{ product.category.name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('product_edit', { 'id': product.id }) }}" class="btn btn-primary">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Eliminar</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
